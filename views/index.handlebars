<h1>EAT DA BURGER!</h1>

<main>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                {{#each burgers}}
                {{#unless this.devoured}}
                <div>
                    <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit" class='btn btn-warning burgerOpt'> {{this.id}}.
                            {{this.burger_name}}</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>


            <div class="col-md-6">
                {{#each burgers}}
                {{#if this.devoured}}
                <div class='burgerDevoured'>
                    <div>
                        {{this.burger_name}}
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>

    </div>

</main>

<h2>Add A Burger Option</h2>

<div class="row">
    <div class="col s12">
        <form action="/burgers" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="Choose a Burger!">
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-warning addBurgerBtn">Add Ze Burger</button>
            </div>
        </form>
    </div>
</div>